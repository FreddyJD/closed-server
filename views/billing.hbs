<!-- Billing/Pricing Page -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-4">Choose Your Plan</h1>
        <p class="lead">Simple pricing for AI-powered sales assistance</p>
        
        {{#if error}}
            <div class="alert alert-danger">
                {{error}}
            </div>
        {{/if}}
    </div>

    <div class="row justify-content-center">
        <!-- Basic Plan -->
        <div class="col-lg-5 col-md-6 mb-4">
            <div class="pricing-card">
                <div class="pricing-header">
                    <h3>Basic</h3>
                    <div class="pricing-icon">
                        <i class="fa fa-user fa-3x"></i>
                    </div>
                    <p class="pricing-description">Perfect for individuals getting started with AI sales assistance</p>
                </div>
                
                <div class="pricing-features mb-4">
                    <div class="feature-item">
                        <i class="fa fa-microphone"></i>
                        <span>Real-time Transcription</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-shield"></i>
                        <span>AI Battle Cards</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-bolt"></i>
                        <span>Instant AI Responses</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-file-text"></i>
                        <span>Documentation Handling</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-clock-o"></i>
                        <span>20 Hours Recording /week</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-users"></i>
                        <span>Up to 5 Team Members</span>
                    </div>
                </div>

                <div class="pricing-footer">
                    <div class="price-container">
                        <span class="price">$19<span class="period">/month</span></span>
                        <div class="billing-info">Per seat, billed monthly</div>
                    </div>
                    <a href="/billing/subscribe?plan=basic" class="btn btn-outline-primary btn-lg btn-block">
                        {{#if (eq tenant.plan 'basic')}}
                            {{#if (eq tenant.status 'trialing')}}
                                Subscribe to Basic
                            {{else}}
                                Current Plan
                            {{/if}}
                        {{else}}
                            Choose Basic
                        {{/if}}
                    </a>
                </div>
            </div>
        </div>

        <!-- Pro Plan -->
        <div class="col-lg-5 col-md-6 mb-4">
            <div class="pricing-card featured">
                <div class="recommended-badge">RECOMMENDED</div>
                <div class="pricing-header">
                    <h3>Professional</h3>
                    <div class="pricing-icon">
                        <i class="fa fa-users fa-3x"></i>
                    </div>
                    <p class="pricing-description">Advanced features for teams and power users</p>
                </div>

                <div class="pricing-features mb-4">
                    <div class="feature-item">
                        <i class="fa fa-microphone"></i>
                        <span>Priority Transcription</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-shield"></i>
                        <span>Advanced AI Battle Cards</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-bolt"></i>
                        <span>Instant AI Responses</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-cogs"></i>
                        <span>Custom AI Training</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-database"></i>
                        <span>Private AI Training</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-clock-o"></i>
                        <span>Unlimited Recording</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-users"></i>
                        <span>Unlimited Team Members</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa fa-headphones"></i>
                        <span>Priority Support</span>
                    </div>
                </div>

                <div class="pricing-footer">
                    <div class="price-container">
                        <span class="price">$39<span class="period">/month</span></span>
                        <div class="billing-info">Per seat, billed monthly</div>
                    </div>
                    <a href="/billing/subscribe?plan=pro" class="btn btn-dark btn-lg btn-block">
                        {{#if (eq tenant.plan 'pro')}}
                            {{#if (eq tenant.status 'trialing')}}
                                Subscribe to Pro
                            {{else}}
                                Current Plan
                            {{/if}}
                        {{else}}
                            Choose Pro
                        {{/if}}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <p class="text-muted">All plans include 7-day free trial • No setup fees • Cancel anytime</p>
        <p class="text-muted">
            <a href="/dashboard" class="btn btn-link">← Back to Dashboard</a>
        </p>
    </div>
</div>

