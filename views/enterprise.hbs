<script>
function calculatePricing() {
    const seats = document.getElementById('seats').value;
    const plan = document.getElementById('plan').value;
    const features = {
        sso: document.getElementById('sso').checked,
        directorySync: document.getElementById('directorySync').checked,
        authorization: document.getElementById('authorization').checked,
        auditLogs: document.getElementById('auditLogs').checked
    };
    
    fetch('/enterprise/calculate-pricing', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ seats, plan, features })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const pricing = data.pricing;
            document.getElementById('pricing-details').innerHTML = `
                <table style="width: 100%; border-collapse: collapse;">
                    <tr><td><strong>Closed AI Seats:</strong></td><td>$${pricing.seatPrice} √ó ${pricing.seats} seats = $${pricing.seatCost}</td></tr>
                    ${pricing.workosFeatures.sso > 0 ? `<tr><td><strong>Single Sign-On:</strong></td><td>$${pricing.workosFeatures.sso}</td></tr>` : ''}
                    ${pricing.workosFeatures.directorySync > 0 ? `<tr><td><strong>Directory Sync:</strong></td><td>$${pricing.workosFeatures.directorySync}</td></tr>` : ''}
                    ${pricing.workosFeatures.authorization > 0 ? `<tr><td><strong>Authorization:</strong></td><td>$${pricing.workosFeatures.authorization}</td></tr>` : ''}
                    ${pricing.workosFeatures.auditLogs > 0 ? `<tr><td><strong>Audit Logs:</strong></td><td>$${pricing.workosFeatures.auditLogs}</td></tr>` : ''}
                    <tr><td><strong>WorkOS Features Total:</strong></td><td>$${pricing.workosFeatures.total}</td></tr>
                    <tr><td><strong>Support & Management (30%):</strong></td><td>$${pricing.supportFee.toFixed(2)}</td></tr>
                    <tr style="border-top: 2px solid #333; font-size: 18px; font-weight: bold;"><td><strong>Total Monthly:</strong></td><td><strong>$${pricing.total.toFixed(2)}</strong></td></tr>
                </table>
                <p style="margin-top: 15px; font-size: 14px; color: #666;">
                    * Includes {{support_markup_percent}}% markup for dedicated support, account management, and premium features
                </p>
            `;
            document.getElementById('pricing-result').style.display = 'block';
        } else {
            alert('Error calculating pricing: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Pricing calculation error:', error);
        alert('Error calculating pricing. Please try again.');
    });
}

// Calculate pricing on page load
document.addEventListener('DOMContentLoaded', function() {
    calculatePricing();
});
</script> 