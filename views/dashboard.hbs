# Dashboard

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center py-4 border-bottom">
                <div>
                    <h1 class="h2 mb-1">Dashboard</h1>
                    <p class="text-muted mb-0">Welcome back, {{user.firstName}}!</p>
                </div>
                <div>
                    <a href="/download" class="btn btn-success">
                        <i class="fa fa-download me-2"></i>Download App
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{#if subscription}}
        <!-- Subscription Info -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fa fa-check-circle me-2"></i>Active Subscription
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong>Plan:</strong> {{subscription.plan_name}}
                                </p>
                                <p class="mb-2">
                                    <strong>Seats:</strong> {{subscription.quantity}}
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong>Status:</strong> <span class="badge bg-success">Active</span>
                                </p>
                                <p class="mb-2">
                                    <strong>Next billing:</strong> {{formatDate subscription.renews_at}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- License Management -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fa fa-key me-2"></i>License Keys
                            </h5>
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addLicenseModal">
                                <i class="fa fa-plus me-1"></i>Add License
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        {{#if seats}}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Email</th>
                                            <th>License Key</th>
                                            <th>Status</th>
                                            <th>Last Used</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each seats}}
                                        <tr>
                                            <td>{{this.user_email}}</td>
                                            <td>
                                                <code class="text-primary">{{this.license_key}}</code>
                                                <button class="btn btn-sm btn-outline-secondary ms-2" onclick="copyToClipboard('{{this.license_key}}')">
                                                    <i class="fa fa-copy"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">{{this.status}}</span>
                                            </td>
                                            <td>
                                                {{#if this.last_used_at}}
                                                    {{formatDate this.last_used_at}}
                                                {{else}}
                                                    <em class="text-muted">Never</em>
                                                {{/if}}
                                            </td>
                                            <td>
                                                {{#if (eq this.status 'active')}}
                                                    <form method="POST" action="/dashboard/revoke-seat" style="display: inline;">
                                                        <input type="hidden" name="seat_id" value="{{this.id}}">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="fa fa-times me-1"></i>Revoke
                                                        </button>
                                                    </form>
                                                {{/if}}
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        {{else}}
                            <div class="text-center py-5">
                                <i class="fa fa-key fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No licenses yet</h5>
                                <p class="text-muted">Add your first team member to generate a license key.</p>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <!-- Add License Modal -->
        <div class="modal fade" id="addLicenseModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Team Member</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form method="POST" action="/dashboard/add-seat">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" name="email" id="email" required 
                                       placeholder="teammate@company.com">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Generate License</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    {{else}}
        <!-- No Subscription -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fa fa-exclamation-triangle me-2"></i>Setup Required
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <h5>No Active Subscription</h5>
                        <p class="mb-4">Choose a plan to start using Battle Cards with your team.</p>
                        <a href="/billing" class="btn btn-success btn-lg">
                            <i class="fa fa-credit-card me-2"></i>Choose Your Plan
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</div>

<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        // You could add a toast notification here
        console.log('License key copied to clipboard');
    });
}
</script> 